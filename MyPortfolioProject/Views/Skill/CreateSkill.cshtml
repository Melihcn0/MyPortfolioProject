@model Skill
@{
    ViewData["Title"] = "CreateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenek Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yetenekler ile ilgili ekleme işlemini aşağıdaki panelden yapabilirsiniz.
						</div>
						<form method="post">
							<input type="hidden" asp-for="SkillID" />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" required />
							<br />
							<label>Değer</label>
							<input type="number" asp-for="value" class="form-control" required />
							<br />
							<button class="btn btn-primary btn-round">Yeteneği Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

