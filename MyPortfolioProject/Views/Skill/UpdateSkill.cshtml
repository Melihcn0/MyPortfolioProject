@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						Yetenekler Sayfası > Yetenek Düzenleme Sayfası<br /><br />
						<div class="card-title">Yetenek Düzenleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yeteneklerim ile ilgili düzenleme işlemini aşağıdaki panelden yapabilirsiniz.
						</div>
						<form method="post">
							<input type="hidden" asp-for="SkillID" />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" required />
							<br />
							<label>Değer</label>
							<input type="number" asp-for="value" class="form-control" required />
							<br />
							<button class="btn btn-success">Değişiklikleri Kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

