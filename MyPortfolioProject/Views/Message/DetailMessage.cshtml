@model Message
@{
	ViewData["Title"] = "DetailMessage";
	Layout = "~/Views/Layout/Index.cshtml";
}
<input type="hidden" asp-for="MessageID" />
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesajlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						Gelen Kutusu > @ViewBag.MessageStatus<br /><br />
						<div class="card-title">Mesaj Detayları</div>

					</div>
					<div class="card-body">
						<div class="card-sub">
							<b>Gönderen : @Model.NameSurname</b>
							<br />
							<b>Email : @Model.Email</b> - <b>
								<br />
								Tarih : @Model.SendDate
							</b>
							<br />
							<b>Mesaj</b> : <i>@Model.MessageDetail</i>
						</div>
					</div>
					<div class="card-footer">
						<a href="/Message/MessageList" class="btn btn-primary btn-border btn-round">Geri</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

