@model ToDoList
@{
	ViewData["Title"] = "UpdateToDoList";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Görevler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Görev Düzenleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Görevler ile ilgili düzenleme işlemini aşağıdaki panelden yapabilirsiniz.
						</div>
						<form method="post">
							<input type="hidden" asp-for="ToDoListID" />
							<label>Başlık & İçerik</label>
							<input type="text" asp-for="@Model.Title" class="form-control" required />
							<br />
							<label>Tarih</label>
							<input type="date" asp-for="@Model.Date" class="form-control" required />
							<br />
							<input type="hidden" asp-for="@Model.Status" class="form-control" required />
							<button class="btn btn-success btn-round">Değişiklikleri Kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

