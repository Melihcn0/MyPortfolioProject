@model List<MyPortfolioProject.DataAccessLayer.Entities.ToDoList>
@{
    ViewData["Title"] = "ToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = (ViewBag.CurrentPage - 1) * 10;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Görevler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Görev Sayfası</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Görevlerle ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                            <a href="@Url.Action("ToDoListList", new { isRead = false })" class="btn btn-info">Yapılmamış Görevler</a>
                            <a href="@Url.Action("ToDoListList", new { isRead = true })" class="btn btn-dark">Yapılan Görevler</a>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Oluşturulma Tarihi</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Date.ToShortDateString()</td>
                                        @if (item.Status == true)
                                        {
                                            <td><a href="/ToDoList/ChangeToDoListStatusToFalse/@item.ToDoListID?page=@ViewBag.CurrentPage&isRead=@ViewBag.IsRead" class="btn btn-dark">Yapılmadı Olarak İşaretle</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/ToDoList/ChangeToDoListStatusToTrue/@item.ToDoListID?page=@ViewBag.CurrentPage&isRead=@ViewBag.IsRead" class="btn btn-info">Yapıldı Olarak İşaretle</a></td>
                                        }
                                        <td><a href="/ToDoList/DeleteToDoList/@item.ToDoListID?page=@ViewBag.CurrentPage&isRead=@ViewBag.IsRead" class="del la-remove"></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/ToDoList/CreateToDoList/" class="btn btn-primary">Yeni Görev Girişi<a />
                    </div>
                </div>
            </div>
         </div>
        <div id="pagination-container" class="pagination-container">
            <ul class="pagination">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&isRead=@ViewBag.IsRead#pagination-container">Önceki</a></li>
                }
                @for (int i = Math.Max(1, ViewBag.CurrentPage - 1); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 1); i++)
                {
                    if (i == ViewBag.CurrentPage)
                    {
                        <li class="page-item active"><a class="page-link" href="#">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="?page=@i&isRead=@ViewBag.IsRead#pagination-container">@i</a></li>
                    }
                }
                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item"><a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&isRead=@ViewBag.IsRead#pagination-container">Sonraki</a></li>
                }
            </ul>
        </div>
       </div>
      </div>


