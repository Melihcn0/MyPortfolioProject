@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						Sosyal Medya Sayfası > Sosyal Medya Düzenleme Sayfası<br /><br />
						<div class="card-title">Sosyal Medya Düzenleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Sosyal Medya ile ilgili düzenleme işlemini aşağıdaki panelden yapabilirsiniz.
						</div>
						<form method="post">
							<input type="hidden" asp-for="SocialMediaID" />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" required />
							<br />
							<label>Adres(Url)</label>
							<input type="text" asp-for="Url" class="form-control" required />
							<br />
							<label>Icon</label>
							<select asp-for="Icon" class="form-control" required>
								<option value="im im-twitter">Twitter</option>
								<option value="im im-instagram">Instagram</option>
								<option value="im im-linkedin">LinkedIn</option>
								<option value="im im-github">Github</option>
							</select>
							<br />
							<button class="btn btn-success">Değişiklikleri Kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

