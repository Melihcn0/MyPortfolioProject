@model Testimonial
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referanslar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Referanslar ile ilgili ekleme işlemini aşağıdaki panelden yapabilirsiniz.
						</div>
						<form method="post">
							<label>Adı Soyadı</label>
							<input type="text" asp-for="NameSurname" class="form-control" required />
							<br />
							<label>Departman</label>
							<input type="text" asp-for="Title" class="form-control" required />
							<br />
							<label>Açıklama</label>
							<textarea rows="4" class="form-control" asp-for="Description" required></textarea>
							<br />
							<input type="hidden" asp-for="ImageUrl" class="form-control" />
							<button class="btn btn-primary btn-round">Referansı Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

