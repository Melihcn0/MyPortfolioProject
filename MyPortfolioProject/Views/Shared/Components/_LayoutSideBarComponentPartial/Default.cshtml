<div id="preloader">
	<div id="loader"></div>
</div>

<script>
// Menüdeki tüm linkleri seç
document.querySelectorAll('.nav-link').forEach(link => {
	link.addEventListener('click', function (e) {
		e.preventDefault(); // Varsayılan tıklama davranışını engelle
		showLoader(); // Loader'ı göster

		const targetHref = this.getAttribute('href'); // Tıklanan linkin hedef adresini al
		setTimeout(() => {
			if (targetHref) {
				window.location.href = targetHref; // Hedef sayfaya yönlendir
			}
		}, 1000); // 1 saniye bekle
	});
});

// Loader'ı gösteren fonksiyon
function showLoader() {
	const loader = document.getElementById('preloader');
	if (loader) {
		loader.style.display = 'flex'; // Loader'ı görünür yap
	}
}

// Sayfa tamamen yüklendiğinde loader'ı gizle
document.addEventListener('DOMContentLoaded', function () {
	const loader = document.getElementById('preloader');
	if (loader) {
		loader.style.display = 'none'; // Sayfa yüklendiğinde loader gizleniyor
	}
});
</script>

