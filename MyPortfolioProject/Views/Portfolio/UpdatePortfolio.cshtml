@model Portfolio
@{
	ViewData["Title"] = "UpdatePortfolio";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolyo</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Portfolyo Güncelleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Portfolyo ile ilgili güncelleme işlemini aşağıdaki panelden yapabilirsiniz.
						</div>
						<form method="post">
							<input type="hidden" asp-for="PortfolioID" />
							<label>Başlık</label>
							<input type="text" asp-for="@Model.Title" class="form-control" />
							<br />
							<label>Alt Başlık</label>
							<input type="text" asp-for="@Model.SubTitle" class="form-control" />
							<br />
							<label>Açıklama</label>
							<input type="text" asp-for="@Model.Description" class="form-control" />
							<br />
							<input type="hidden" asp-for="@Model.ImageUrl" class="form-control" />
							<input type="hidden" asp-for="@Model.Url" class="form-control" />
							<button class="btn btn-success">Portfolyo'yu Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

