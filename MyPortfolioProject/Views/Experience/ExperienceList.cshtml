@model List<Experience>
@{
	ViewData["Title"] = "ExperienceList";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}


	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Deneyimler</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
						Deneyim Sayfası<br /><br />
							<div class="card-title">Deneyim Sayfası</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Deneyimler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
							</div>
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Başlık</th>
										<th scope="col">Ünvan</th>
										<th scope="col">Tarih</th>
										<th scope="col">Düzenle</th>
										<th scope="col">Sil</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
									count++;
									<tr>
											
											<td>@count</td>
											<td>@item.Head</td>
											<td>@item.Title</td>
											<td>@item.Date</td>
										<td><a href="/Experience/UpdateExperience/@item.ExperienceID?page=@ViewBag.CurrentPage&isRead=@ViewBag.IsRead" class="edt la-edit"></a></td>
										<td><a href="/Experience/UpdateExperience/@item.ExperienceID?page=@ViewBag.CurrentPage&isRead=@ViewBag.IsRead" class="del la-remove"></a></td>
									</tr>
									}
								</tbody>
							</table>
						<td><a href="/Experience/CreateExperience/" class="btn btn-primary">Yeni Deneyim Girişi</a></td>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>



