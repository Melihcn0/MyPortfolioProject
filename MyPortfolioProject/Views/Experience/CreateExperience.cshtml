@model Experience
@{
    ViewData["Title"] = "CreateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						Deneyim Sayfası > Deneyim Ekleme Sayfası<br /><br />
						<div class="card-title">Deneyim Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Deneyimler ile ilgili ekleme işlemini aşağıdaki panelden yapabilirsiniz.
						</div>
					<form method="post">
						<label>Firma Bilgisi</label>
							<input type="text" asp-for="Head" class="form-control" required />
						<br />
						<label>Çalışılan Pozisyon</label>
							<input type="text" asp-for="Title" class="form-control" required />
						<br />
						<label>Tarih Aralığı</label>
							<input type="text" asp-for="Date" class="form-control" required />
						<br />
						<label>Açıklama</label>
							<textarea rows="4" class="form-control" asp-for="Description" required></textarea>
						<br />
							<button class="btn btn-primary">Deneyimi Ekle</button>
					</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

