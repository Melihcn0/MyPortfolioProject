@model About
@{
	ViewData["Title"] = "UpdateAbout";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						Hakkımda Sayfası > Hakkımda Düzenleme Sayfası<br /><br />
						<div class="card-title">Hakkımda Düzenleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımda ile ilgili düzenleme işlemini aşağıdaki panelden yapabilirsiniz.
						</div>
						<form method="post">
							<input type="hidden" asp-for="AboutID" />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" required />
							<br />
							<label>Açıklama</label>
							<input type="text" asp-for="SubDescription" class="form-control" required />
							<br />
							<label>Detay</label>
							<input type="text" asp-for="Details" class="form-control" required />
							<br />
							<button class="btn btn-success">Değişiklikleri Kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

