@model List<Feature>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Giriş</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						Giriş Sayfası<br /><br />
						<div class="card-title">Giriş Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Giriş Sayfası ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Düzenle</th>
								</tr>
							</thead>
							<tbody>
								@foreach(var item in Model)
								{
									<tr>
										<td>@item.FeatureID</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>
											<a href="/Feature/UpdateFeature/@item.FeatureID" class="edt">
												<i class="la la-edit"></i>
											</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	// Tüm 'la la-edit' ikonlarını seç
	const editIcons = document.querySelectorAll('.la la-edit');

	// Tıklama olayını her bir ikona ekle
	editIcons.forEach(icon => {
		icon.addEventListener('click', function (event) {

			// İlgili 'a' elementine 'active' sınıfını ekle
			const parentLink = this.closest('li').querySelector('.nav-link.x1');
			if (parentLink) {
				parentLink.classList.add('active');
			}
		});
	});
</script>
