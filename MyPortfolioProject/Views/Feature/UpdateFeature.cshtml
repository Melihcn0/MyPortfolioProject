@model Feature
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Giriş</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Giriş Sayfası Düzenleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Giriş Sayfası ile ilgili düzenleme işlemini aşağıdaki panelden yapabilirsiniz.
						</div>
						<form method="post">
							<input type="hidden" asp-for="FeatureID" />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" required/>
							<br />
							<label>Açıklama</label>
							<input type="text" asp-for="Description" class="form-control" required />
							<br />
							<button class="btn btn-success">Değişiklikleri kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

